@model Category
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Kategori Ekle / Düzenle</h5>

        <!-- Vertical Form -->
        <form class="row g-3" asp-controller="Blog" asp-action="AddCategory" method="post">
            <input type="hidden" name="id" value="@Model.Id"/>
            <div class="col-12">
                <label for="inputNanme4" class="form-label">Kategori Adı</label>
                <input type="text" class="form-control" name="name" value="@Model.Name">
            </div>
            <div class="col-12">
                <label for="inputEmail4" class="form-label">Açıklaması</label>
                <input type="text" class="form-control" name="description" value="@Model.Description">
            </div>
            <div class="col-12">
                <label for="inputPassword4" class="form-label">Sırası</label>
                <input type="number" class="form-control" name="order" value="@Model.Order">
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="isActive" id="gridCheck2" checked="@Model.IsActive">
                    <label class="form-check-label" for="gridCheck2">
                        Aktif mi?
                    </label>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <button type="reset" class="btn btn-secondary">Sıfırla</button>
            </div>
        </form><!-- Vertical Form -->

    </div>
</div>